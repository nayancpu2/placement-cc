<link rel="stylesheet" href="<%= assetPath('css/add_student.css') %>" >

<div class="box flex">
    <div class="student-form-box flex">
        <% if(locals.user){ %>
            <form action="/students/create-student" method="POST" class="flex">
                <h1> Add Student </h1>

                <div class="form-input flex">
                    <label for="batch">Batch</label>
                    <input type="number" id="batch" name="batch" placeholder="Batch" required />
                </div>

                <div class="form-input flex">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Name" required />
                </div>

                <div class="form-input flex">
                    <label for="email">Email address</label>
                    <input type="email" id="email" name="email" placeholder="Email" required />
                </div>
                
                <div class="form-input flex">
                    <label for="contact">Contact Number</label>
                    <input type="number" id="contact" name="contactNumber" placeholder="Contact Number" required />
                </div>

                <div class="form-input flex">
                    <label for="college">College Name</label>
                    <input type="text" id="college" name="college" placeholder="College" required />
                </div>
                
                <div class="grp-form-input flex">
                    <label for="placement">Placement Status</label>
                    <select id="placement" name="placement">
                        <option value="Placed">Placed</option>
                        <option value="Not Placed">Not Placed</option>
                    </select>
                </div>

                <div class="grp-form-input flex">
                    <div>
                        <label for="dsa">DSA</label>
                        <input type="number" id="dsa" name="dsa" placeholder="1" required />
                    </div>

                    <div>
                        <label for="webd">Web Development</label>
                        <input type="number" id="webd" name="webd" placeholder="1" required />
                    </div>

                    <div>
                        <label for="react">React</label>
                        <input type="number" id="react" name="react" placeholder="1" required />
                    </div>
                </div>


                <button type="submit">Create Student</button>
            </form>
        <% } %>
    </div>
</div>
